# Configurazione per ambiente di produzione
# Copia questo file in .env e modifica i valori secondo le tue necessit√†

# Dominio principale del sito
DOMAIN_NAME=palladiumblockchain.net

# Email per certificati SSL Let's Encrypt
SSL_EMAIL=admin@palladium.example.com

# Ambiente di esecuzione (development, staging, production)
ENVIRONMENT=production

# Debug mode (true/false)
DEBUG=false

# Porte per i servizi
WEB_PORT=80
WEB_SSL_PORT=443
API_PORT=8032

# Configurazione nginx
NGINX_HOST=palladium.example.com
NGINX_PORT=80

# Configurazione database (se necessario per l'API)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=palladium_db
DB_USER=palladium_user
DB_PASSWORD=your_secure_password_here

# Configurazione Redis (se necessario per caching)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# Configurazione API
API_SECRET_KEY=your_very_secure_secret_key_here
API_CORS_ORIGINS=https://palladium.example.com

# Configurazione logging
LOG_LEVEL=INFO
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=3

# Configurazione monitoraggio
ENABLE_MONITORING=true
WATCHTOWER_POLL_INTERVAL=3600

# Configurazione SSL/TLS
ENABLE_SSL=true
SSL_CERT_PATH=/etc/letsencrypt/live/palladium.example.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/palladium.example.com/privkey.pem

# Configurazione sicurezza
SECURITY_HEADERS=true
RATE_LIMITING=true
MAX_REQUESTS_PER_MINUTE=100

# Configurazione backup (opzionale)
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30